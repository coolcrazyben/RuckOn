{%- endcomment -%}
{%- assign community_names = "CrossFit Gold|Iron Brotherhood|Alpha Company|Bravo Squad|Charlie Platoon|Delta Company|Echo Team|Foxtrot Unit|GORUCK Chicago|GORUCK Atlanta|GORUCK Austin|GORUCK Seattle|Ruck Nation" | split: "|" -%}

<option value="">No community / Individual</option>
{%- for community in community_names -%}
  <option value="{{ community | escape }}"{% if selected == community %} selected{% endif %}>{{ community }}</option>
{%- endfor -%}
