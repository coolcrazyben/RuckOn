<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'css-variables' %}

    {%- comment -%} Google Fonts: Black Ops One + Barlow Condensed + Barlow {%- endcomment -%}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Black+Ops+One&family=Barlow+Condensed:wght@300;400;500;600;700&family=Barlow:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&display=swap"
      rel="stylesheet"
    >

    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% render 'meta-tags' %}

    {%- comment -%}
      Favicon — upload your image in Shopify admin:
      Online Store → Themes → Customize → Theme settings → Favicon
      Recommended size: 32×32px or 512×512px PNG
    {%- endcomment -%}
    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    <main id="main-content">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'scroll-animations' %}
  </body>
</html>
