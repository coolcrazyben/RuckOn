      "id": "heading_text_1",
      "label": "Heading — first part (white)",
      "default": "Best "
    },
    {
      "type": "text",
      "id": "heading_text_2",
      "label": "Heading — second part (tan accent)",
      "default": "Sellers"
    },
    {
      "type": "text",
