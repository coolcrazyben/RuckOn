{% style %}
  #shopify-section-{{ section.id }} .announcement-bar {
    --ab-bg:          {{ section.settings.background_color }};
    --ab-text-color:  {{ section.settings.text_color }};
    --ab-border:      {{ section.settings.border_color }};
  }
{% endstyle %}

{% unless section.settings.show_bar == false %}
  <div class="announcement-bar full-width">
    <p class="announcement-bar__text">
      {% if section.settings.link_url != blank %}
        <a href="{{ section.settings.link_url }}" class="announcement-bar__link">
          {{ section.settings.announcement_text }}
        </a>
      {% else %}
        {{ section.settings.announcement_text }}
      {% endif %}
    </p>
  </div>
{% endunless %}

{% stylesheet %}
  .announcement-bar {
    background-color: var(--ab-bg, #2d3a18);
    border-bottom: 1px solid var(--ab-border, #4a5c2a);
    padding: 11px 20px;
    text-align: center;
    height: var(--announcement-bar-height, 42px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .announcement-bar__text {
    font-family: var(--font-label);
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--ab-text-color, #e8d5b0);
    margin: 0;
  }

  .announcement-bar__link {
    color: inherit;
    text-decoration: none;
  }

  .announcement-bar__link:hover {
    color: var(--color-tan);
    text-decoration: underline;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_bar",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on orders over $75 | Use code RUCKON10 for 10% off your first order"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL (optional)"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#2d3a18"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#e8d5b0"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#4a5c2a"
    }
  ]
}
{% endschema %}
